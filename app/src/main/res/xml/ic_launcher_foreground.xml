<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
  <!-- Clock Design -->
  <group android:scaleX="0.85"
      android:scaleY="0.85"
      android:translateX="10"
      android:translateY="10">
    <!-- Outer Circle -->
    <path
        android:pathData="M54,5a49,49 0,1 1,-49 49,49 49 0,0 1,49 -49z"
        android:fillColor="#8E24AA"/>
    <!-- Clock Face -->
    <path
        android:pathData="M54,20a34,34 0,1 1,-34 34,34 34 0,0 1,34 -34z"
        android:fillColor="#E1BEE7"/>
    <!-- Hour Hand -->
    <path
        android:pathData="M54,54v-15"
        android:strokeColor="#6A1B9A"
        android:strokeWidth="4"
        android:strokeLineCap="round"/>
    <!-- Minute Hand -->
    <path
        android:pathData="M54,54h20"
        android:strokeColor="#6A1B9A"
        android:strokeWidth="3"
        android:strokeLineCap="round"/>
    <!-- Center Circle -->
    <path
        android:pathData="M54,54a3,3 0,1 1,-3 3,3 3 0,0 1,3 -3z"
        android:fillColor="#6A1B9A"/>
  </group>
</vector>
